@page "/api/accounts/ConfirmEmail"

<MudPaper Class="confirmation-container p-4 shadow-sm">
    <MudGrid>
        <MudItem xs="12" Class="text-center mb-4">
            <MudText Typo="Typo.h3">@L["UserConfirmEmail"]</MudText>
        </MudItem>
        <MudItem xs="12" Class="text-center mb-4">
            <MudText Typo="Typo.body1">@L["UserConfirmEmailMessage"]</MudText>
        </MudItem>
        <MudItem xs="12" Class="text-center">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ConfirmAccountAsync">@L["UserConfirmEmail"]</MudButton>
        </MudItem>
    </MudGrid>
</MudPaper>