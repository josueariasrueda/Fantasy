@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="_darkMode" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" 
                       Color="Color.Inherit" 
                       Edge="Edge.Start" 
                       OnClick="@((e) => DrawerToggle())" />
        <MudLink Href="/" 
                 Typo="Typo.h6" 
                 Class="ml-3" 
                 Color="Color.Inherit">
            @L["IUTitle"]
        </MudLink>

        <MudSpacer />        

        <!-- AuthLinks -->
        <MudMenu>
            <ActivatorContent>
                <MudAvatar Size="Size.Small" Color="Color.Primary">
                    @if (!string.IsNullOrEmpty(photoUser))
                    {
                        <MudImage Src="@photoUser"></MudImage>
                    }
                    else
                    {
                        @GetInicials()
                    }
                </MudAvatar>
            </ActivatorContent>

            <ChildContent>
                <AuthLinks />
            </ChildContent>
        </MudMenu>

        <!-- Settings -->
        <MudMenu Icon="@Icons.Material.Filled.Settings" 
                    Color="Color.Inherit" 
                    AnchorOrigin="Origin.BottomRight" 
                    TransformOrigin="Origin.TopRight">
            <AuthLinks /> 
        </MudMenu>

        <!-- Dark Light -->
        <MudIconButton Icon="@_icon" 
                       Color="Color.Inherit" 
                       Edge="Edge.Start" 
                       OnClick="@((e) => DarkModeToggle())" />

        <!-- Lenguage -->
        <MudMenu Icon="@Icons.Material.Filled._3p"
                 Color="Color.Inherit"
                 ActivationEvent="@MouseEvent.MouseOver"
                 AnchorOrigin="Origin.BottomRight"
                 TransformOrigin="Origin.TopRight">
            <LenguageLinks />
        </MudMenu>



    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" 
               ClipMode="DrawerClipMode.Always" 
               Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Style="margin-top: 3rem">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>